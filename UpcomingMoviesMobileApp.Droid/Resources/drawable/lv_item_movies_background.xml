<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#F4F4F2"/>
      <corners android:radius="2dp" />
    </shape>
  </item>

  <item
      android:left="1dp"
      android:right="1dp"
      android:top="1dp"
      android:bottom="2dp">
    <shape android:shape="rectangle">
      <solid android:color="#FFF"/>
      <corners android:radius="2dp" />
    </shape>
  </item>
</layer-list>